<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_4_px" />
            <stroke
                android:width=".5dp"
                android:color="@color/gray_us" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorWhite"
                android:centerY="0.5"
                android:endColor="@color/colorWhite"
                android:startColor="@color/colorWhite" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/_4_px" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/color_progressbar_red"
                    android:startColor="@color/color_progressbar_red" />
            </shape>
        </clip>
    </item>
</layer-list>